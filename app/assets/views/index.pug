                form.feedback__form(action="/.php" method="POST")
                    .input
                        .input__label Выберите объект

                        .select
                            input.select__input(type="hidden" name="object")
                            .select__btn

                            .select__dropdown.select__dropdown--hide
                                .select__dropdown-option(data-value="0") Промышленное здание
                                .select__dropdown-option(data-value="1") Elem 2
                                .select__dropdown-option(data-value="2") Elem 3

                    .input
                        .input__label Выберите площадь

                        .select
                            input.select__input(type="hidden" name="area")
                            .select__btn

                            .select__dropdown.select__dropdown--hide
